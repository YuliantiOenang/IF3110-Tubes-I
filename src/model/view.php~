 <?php
class View_Model
{
    private $data = array();
    private $render;
    public function __construct($template)
    {
		  //ketika CTOR, langsung ambil informasi dan lokasi laman
        $file = SERVER_ROOT . '/lihat/' . strtolower($template) . '.php';
        if (file_exists($file)) $this->render = $file;
		  else die('File View di '.$file.' tidak ditemukan');
    }
    public function setData($variable , $value)
    {
        $this->data[$variable] = $value;
    }

    public function __destruct()
    {
		  //ketika dtor, maka panggil laman view
        $data = $this->data;
        include($this->render);
    }
} 
